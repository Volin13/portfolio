<html lang={{currentLang}}>
  <head>

    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}}</title>
    <base href='/' />
    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/assets/apple-touch-icon.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='/assets/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/assets/favicon-16x16.png'
    />
    <link rel='manifest' href='/assets/site.webmanifest' />
    <link
      rel='mask-icon'
      href='/assets/safari-pinned-tab.svg'
      color='#5bbad5'
    />
    <meta name='msapplication-TileColor' content='#da532c' />
    <meta name='theme-color' content='#ffffff' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap'
      rel='stylesheet'
    />
    <style>
      .loader { position: fixed; top: 0; left: 0; width: 100%; height: 100%;
      background-color: rgba(255, 255, 255, 0.8); display: flex;
      justify-content: center; align-items: center; z-index: 9999; } .spiner {
      height: 25vw; width: 25vw; color: #7833ff; stroke: #5700ff; fill: #bc99ff;
      animation: rotate 1s linear infinite; } .content { display: none; }
      @keyframes rotate { from { transform: rotate(0deg); } to { transform:
      rotate(360deg); } } @keyframes fadeOut { from { transform: translateY(0);
      opacity: 1; } to { transform: translateY(100%); opacity: 0.2; } }
    </style>
  </head>
  <body>
    <div id='loader' class='loader'>
      <svg viewBox='0 0 24 24' fill='currentColor' class='spiner'>
        <path
          d='M12 3C10.22 3 8.48 3.53 7 4.52C5.52 5.51 4.37 6.91 3.69 8.56C3 10.2 2.83 12.01 3.17 13.76C3.52 15.5 4.38 17.11 5.64 18.36C6.89 19.62 8.5 20.48 10.24 20.83C11.99 21.17 13.8 20.99 15.44 20.31C17.09 19.63 18.49 18.48 19.48 17C20.47 15.52 21 13.78 21 12'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
        />
        <path
          d='M19.79 7.5C19.89 7.67 19.98 7.84 20.07 8.01'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
        />
      </svg></div>
    <div id='content' class='content'>
      <header id='header' class='headerThumb'></header>
      <main id='projectDetails' class='project container section'>
        <a href='{{link}}'>
          <h1 class='project__title project__title-decoration'>{{title}}</h1>
        </a>

        <div class='section project__descriptionThumb'>
          <div class='project__description'>
            <p>{{description}}</p>
            <div class='project__linkGroup'>
              <a class='project__link' href='{{link}}'>
                GitHub
                <svg>
                  <use href='/assets/sprite.svg#icon-github'></use></svg>

              </a>
              <a class='project__link' href='{{anchor}}'>
                <span>Web</span>
                <svg viewBox='0 0 40 40'>
                  <use href='/assets/sprite.svg#icon-arrowLink'></use></svg>
              </a>
            </div>
          </div>
          {{#if mainImgDesktop}}
            <div class='project__mainImgThumb'>

              <img
                class='project__mainImg project__mainImg-desktop'
                src={{mainImgDesktop}}
                alt='{{title}}-desktop'
              />
              <img
                class='project__mainImg project__mainImg-tablet'
                src={{mainImgTablet}}
                alt='{{title}}-tablet'
              />
              <img
                class='project__mainImg project__mainImg-mobile'
                src={{mainImgMobile}}
                alt='{{title}}-mobile'
              />
            </div>
          {{else}}
            <img
              class='project__mainImg project__mainImg__desktop'
              src='https://via.placeholder.com/800x500?text=Image not found'
              alt='{{title}}-desktop'
            />

          {{/if}}
        </div>

        <h2 class='project__title project__title'>
  {{../translations.projectDetailsSubtitle}}
          </h2>

        <div class='section project__swiper' style='position: relative;'>
          <div>
            <div
              class='samples__swiper swiper descriptionSwiper swiper-container'
            >
              <div class='swiper-wrapper descriptionSwiper__wrapper'>
                {{#each slides}}
                  <div
                    class='swiper-slide descriptionSwiper__slide'
                    style='transition: opacity 1s ease-in-out'
                  >
                    <img
                      class='descriptionSwiper__image'
                      src='{{src}}'
                      alt='{{alt}}'
                      loading='lazy'
                    />
                    <div class='swiper-lazy-preloader'></div>
                    <h3 class='descriptionSwiper__title'>{{slideTitle}}</h3>
                    <p class='descriptionSwiper__text'>{{slideDescription}}</p>
                  </div>
                {{/each}}
              </div>
            </div>
            <div class='swiper-pagination descriptionSwiper__pagination'></div>
            <div
              class='descriptionSwiper__button descriptionSwiper__button-prev'
            >
              <div
                class='descriptionSwiper__button-text descriptionSwiper__button-prevText'
              >
                {{../translations.previous}}

              </div>
            </div>
            <div
              class='descriptionSwiper__button descriptionSwiper__button-next'
            >
              <div
                class='descriptionSwiper__button-text descriptionSwiper__button-nextText'
              >
                {{../translations.forward}}

              </div>
            </div>
          </div>
        </div>
        <div class='section'>
          <h2 class='project__title'>
                {{../translations.usedTech}}
</h2>

          <ul class='project__techList'>
            {{#each tech}}
              <li class='project__techItem'>
                <span
                  class='project__techIcon'
                  style='background-image: url("/assets/{{svgName}}.svg")'
                ></span>
                <span>{{techName}}</span>
                <p class='project__techDescription'>{{useDescription}}</p>
              </li>
            {{/each}}
          </ul>
        </div>
      </main>
      <footer id='footer' class='footerThumb'></footer>

    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() { const loader =
      document.getElementById('loader'); const content =
      document.getElementById('content'); function showContent() {
      content.style.display = 'block'; } function hideLoader() {
      loader.style.animation = 'fadeOut 1.5s ease-out forwards';
      loader.addEventListener('animationend', function() { loader.style.display
      = 'none'; }); } window.addEventListener('load', function() {
      showContent(); hideLoader(); }); });
    </script>
  </body>
</html>